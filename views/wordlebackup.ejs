  <div class="main-container">
    <h1>Security Wordle</h1>
    <div class="subtitle">Day <span id="dayNumber"></span> — Guess todays cybersecurity word</div>

    <div id="board"></div>

    <div class="input-section">
      <input type="text" id="guessInput" maxlength="5" placeholder="Enter word" />
      <button onclick="submitGuess()">Submit</button>
    </div>

    <div id="message">You have 6 attempts. Good luck!</div>
  </div>
  <script>
        const wordList = [
        "phish", "patch", "token", "scans", "spoof", "debug", "proxy", "virus",
        "azure", "risks", "hacks", "bytes", "siems", "alert", "cloud", "dmarc",
        "input", "log4j", "leaks", "email", "admin", "cisos", "token", "agent",
        "kyber", "audit", "threat", "cyber", "admin", "watch", "alert"
        ];
    const today = new Date();
    const day = today.getDate();
    document.getElementById('dayNumber').textContent = day;
    const targetWord = wordList[day - 1] || "token";

    let attempts = [];

    function updateBoard() {
      const board = document.getElementById('board');
      board.innerHTML = '';

      attempts.forEach(word => {
        const result = Array(5).fill('absent');
        const target = targetWord.split('');
        const guess = word.split('');
        const letterCount = {};

        for (let i = 0; i < 5; i++) {
          if (guess[i] === target[i]) {
            result[i] = 'correct';
            target[i] = null;
          } else {
            letterCount[target[i]] = (letterCount[target[i]] || 0) + 1;
          }
        }

        for (let i = 0; i < 5; i++) {
          if (result[i] !== 'correct' && letterCount[guess[i]] > 0) {
            result[i] = 'present';
            letterCount[guess[i]]--;
          }
        }
        for (let i = 0; i < 5; i++) {
          const tile = document.createElement('div');
          tile.className = `tile ${result[i]}`;
          tile.textContent = guess[i];
          board.appendChild(tile);
        }
      });

      for (let i = attempts.length; i < 6; i++) {
        for (let j = 0; j < 5; j++) {
          const tile = document.createElement('div');
          tile.className = 'tile';
          board.appendChild(tile);
                          }
      }
    }

    function submitGuess() {
      const input = document.getElementById('guessInput');
      const guess = input.value.toLowerCase();

      if (guess.length !== 5) {
        document.getElementById('message').textContent = '❗ Enter a 5-letter word.';
        return;
      }

      attempts.push(guess);
      input.value = '';
      updateBoard();

      if (guess === targetWord) {
        document.getElementById('message').textContent = '🎉 Correct! Points incoming!';
        document.getElementById('guessInput').disabled = true;

        fetch('/wordle/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ won: true, attemptCount: attempts.length })
        })
        .then(res => res.json())
        .then(data => {
          document.getElementById('message').textContent = `🎉 You earned ${data.pointsAwarded} points!`;
        })
        .catch(() => {
          document.getElementById('message').textContent = '✅ Word correct, but points not updated.';
        });

      } else if (attempts.length >= 6) {
        document.getElementById('message').textContent = `💀 Game Over. The word was: ${targetWord.toUpperCase()}`;
        document.getElementById('guessInput').disabled = true;
      } else {
        document.getElementById('message').textContent = `${6 - attempts.length} attempts remaining.`;
      }
    }

    document.getElementById('guessInput').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') submitGuess();
    });
    updateBoard();


    function toggleDropdown() {
      const dropdown = document.getElementById("userDropdown");
      dropdown.classList.toggle("show");
    }

    document.addEventListener("click", function (event) {
      const avatar = document.querySelector(".user-avatar");
      const dropdown = document.getElementById("userDropdown");
      if (!avatar.contains(event.target) && !dropdown.contains(event.target)) {
        dropdown.classList.remove("show");
      }
    });

</script>
